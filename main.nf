~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

include { DEMO } from './workflows/demo'

//
// WORKFLOW: Run main nf-core/demo analysis pipeline
//
workflow NFCORE_DEMO {
    DEMO ()
}

